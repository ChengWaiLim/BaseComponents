<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="standardEditText">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="standardTextView">
        <item name="android:fontFamily">@font/maven_pro_medium</item>
        <item name="android:textColor">#969696</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="standardButton">
        <item name="android:fontFamily">@font/maven_pro_bold</item>
        <item name="android:background">@color/grey</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="toggleButton">
        <item name="android:fontFamily">@font/maven_pro_bold</item>
        <item name="android:background">@color/green</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textOn">START</item>
        <item name="android:textOff">STOP</item>
    </style>
    <style name="LoadingDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="tableHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
    </style>
    <style name="standardSpinner">
        <item name="android:textAlignment">center</item>
        <item name="smsp_itemColor">@color/colorPrimary</item>
        <item name="smsp_itemListColor">#7C4DFF</item>
        <item name="smsp_itemListHintColor">#FFFFFF</item>
        <item name="smsp_selectedItemListColor">#FF5252</item>
        <item name="smsp_floatingLabelSize">16sp</item>
    </style>
</resources>