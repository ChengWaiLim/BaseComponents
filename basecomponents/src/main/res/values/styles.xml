<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="standardEditText">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="standardTextView">
        <item name="android:fontFamily">@font/maven_pro_medium</item>
        <item name="android:textColor">#969696</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="standardButton">
        <item name="android:fontFamily">@font/maven_pro_bold</item>
        <item name="android:background">@color/grey</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="LoadingDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>